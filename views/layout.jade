doctype html
html(data-ng-app="instaApp")
  head
    title= title
    meta(name='description', content='Sochi2014 - live photostream from Instagram')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css')
    script(src="//code.jquery.com/jquery-1.10.2.min.js")
    script(src="/socket.io/socket.io.js")
    script(src="/js/angular.min.js")
    script(src="/js/controllers.js")
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-2929231-4', 'zoonman.com');
      ga('send', 'pageview');


  body(ng-controller="instaCtrl")
    div.toolbar
      div.title
        <i class="fa fa-instagram"></i> Live Photos from Instagram - Sochi 2014!
      div.stats
        span /
        span#views #{views}
        span /
        span#status
        span /
        a(href='https://www.facebook.com/sharer/sharer.php?u=http://mrkt.ms/8uZ') Share
      div.subscriptions
        a(href='/subscribe')
      div.user
        div.data
          - if (typeof sessionDetails['userInfo']['username'] !== 'undefined') {
            img(src="#{sessionDetails['userInfo']['profile_picture']}")
            span #{sessionDetails['userInfo']['username']}

          - } else {
          a(href='#{oauthUrl}')
            i.fa.fa-sign-in Login
          - }
    block content
